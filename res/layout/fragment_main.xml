<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.esaycard1.esaycard.MainActivity$PlaceholderFragment"
    android:background="#838383"
    android:clickable="true"
    android:focusable="false"
    style=" "
    android:longClickable="true">

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Capture Card"
        android:id="@id/action_settings"
        android:textColor="#000102"
        android:textColorHighlight="#2f8eff"
        android:singleLine="false"
        android:enabled="true"
        android:onClick="buttonSetTextView"
        android:typeface="monospace"
        android:textColorHint="#2733ff"
        android:longClickable="false"
        android:background="#14fdff"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="My Cards"
        android:id="@+id/button2"
        android:enabled="true"
        android:height="100dp"
        android:onClick="setContentView"
        android:layout_marginBottom="47dp"
        android:typeface="monospace"
        android:textColorHint="#1614ff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/action_settings"
        android:layout_alignEnd="@id/action_settings"
        android:layout_alignLeft="@id/action_settings"
        android:layout_alignStart="@id/action_settings"
        android:layout_alignParentEnd="false"
        android:background="#1bfff1"
        android:clickable="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="           Logo"
        android:id="@+id/textView2"
        style="  "
        android:background="#21ffe1"
        android:layout_alignRight="@id/action_settings"
        android:layout_alignEnd="@id/action_settings"
        android:layout_alignLeft="@id/action_settings"
        android:layout_alignStart="@id/action_settings"
        android:singleLine="false" />

</RelativeLayout>
